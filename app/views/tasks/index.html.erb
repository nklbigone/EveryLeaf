<%= t('view.sample') %>
<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<%= search_form_for @search do |f| %>
  <div class="field">
<%= f.label :title_cont ,"search by title" %>
<%= f.text_field :title_cont %>
<%= f.label :status_cont ,"search by status" %>
<%= f.text_field :status_cont %>
</div>
<div class="actions"><%= f.submit "search"%></div>
  <% end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Task</th>
      <th>Status</th>
      <th>User</th>
      <th>Priority</th>
      <th>Deadline</th>
      <th>Created Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.task_name %></td>
        <td><%= task.status %></td>
        <td><%= task.user_id %></td>
        <td><%= task.priority %></td>
        <td><%= task.deadline %></td>
        <td><%= task.created_at %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <button>
          <%= link_to 'Sort by deadline', tasks_path(sorting_deadline: 'true') %>
    </button>
    <button>
          <%= link_to 'Sort by priority', tasks_path(sorting_priority: 'true') %>
    </button>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
<%= paginate @tasks %>
