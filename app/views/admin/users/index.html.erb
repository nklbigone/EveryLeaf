<p id="notice"><%= notice %></p>
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Email</th>
      <th>User Type</th>
      <th>User Tasks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.fname %></td>
        <td><%= user.lname %></td>
        <td><%= user.email %></td>
        <td><%= user.user_type %></td>
        <td><%= link_to 'Show', admin_user_path(user.id) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

<table class="table table-AZURE">
  <thead>
    <tr>
      <th>Title</th>
      <th>Task</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Deadline</th>
      <th>Created Date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <% if current_user.id == task.user_id%>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.task_name %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.deadline %></td>
        <td><%= task.created_at %></td>
        <td><%= task.user.lname%></td>
        <td><%= link_to 'Show', task, class: 'btn btn-success btn btn-sm' %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary btn btn-sm' %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn btn-sm' %></td>
      </tr>
      <%end%>
      <% end %>
      </tbody>
      </table>
      
      <%= link_to 'New Task', new_task_path %>
</div>
